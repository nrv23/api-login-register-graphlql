{
  "name": "book-store-api",
  "version": "1.0.0",
  "description": "Proyecto inicial para aprender las bases de GraphQL mediante la práctica",
  "main": "build/app.js",
  "scripts": {
    "start": "node build/app.js",
    "build": "npx tsc -p . && ncp src/schema build/schema",
    "dev": "nodemon \"src/app.ts\" --exec \"ts-node\" \"src/app.ts\" -e ts,graphql,json",
    "lint": "npx eslint . --ext .ts",
    "lint.fix": "npx eslint . --ext .ts --fix"
  },
  "keywords": [
    "graphql",
    "graphql-basic",
    "unions",
    "query",
    "mutation",
    "book-store-",
    "apollo-server-express-3"
  ],
  "author": "Natanaiel Rodríguez Venegas <nrv2391@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@graphql-tools/load-files": "^6.5.3",
    "apollo-server-express": "^3.6.2",
    "bcrypt": "^5.0.1",
    "chalk": "^4.1.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.17.2",
    "graphql": "^16.2.0",
    "graphql-depth-limit": "^1.1.0",
    "graphql-import-node": "0.0.4",
    "graphql-tools": "^8.2.11",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^4.7.0",
    "ncp": "^2.0.0",
    "typescript": "^4.5.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/node": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "^8.17.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0"
  }
}
